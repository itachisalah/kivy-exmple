<Baton>:
    canvas:
        Color:
            rgba: 1,1,1,1
        PushMatrix:
        Rotate:
            angle: self.rot
            origin: self.center
            axis: 0,0,1
        Line:
            points: [350, 300, 450, 300]
            width: 2
        Line:
            circle: [350, 300, 8]
            width: 2
        Line:
            circle: [450, 300, 8]
            width: 2
        PopMatrix:


<Ball>:
    canvas:
        Color:
            rgba: 1,1,1,1
        PushMatrix:
        Rotate:
            angle: self.rotation
            origin: self.center
            axis: 0,0,1
        Line:
            circle: [self.center_x, self.center_y-5, 7]
            width: 2
        Color:
            rgba: 1,0,0,1
        Line:
            points: [self.center_x, self.center_y-5, self.center_x, self.center_y]
            width: 3
        PopMatrix:

<BattleField>:
    canon: myCanon
    Canon:
        id: myCanon
        pos: 20, 20
        size: 100, 50
        canvas:
            Color:
                rgba: .2,.2,.2,1
            Ellipse:
                pos: [-50, -50]
                size: [100, 100]
            PushMatrix:
            Rotate:
                angle: self.rotation
                origin: 35, 35
                axis: 0,0,1
            Line:
                rectangle: [self.x, self.y, 100, 20]
                width: 2
            PopMatrix:


<Car>:
    canvas:
        PushMatrix:
        Color:
            rgba: 1,1,1,.8
        Rotate:
            angle: self.angle
            origin: self.center
            axis: 0, 0, 1
        Line:
            rectangle: [self.x, self.y, 30, 50]
            width: 3
        Color:
            rgba: 1, 1, 0, 1
        Rectangle:
            size: [8, 8]
            pos: [self.x + 5, self.y + 52]
        Rectangle:
            size: [8, 8]
            pos: [self.x + 18, self.y + 52]
        PopMatrix:


<Oscillator>:
    canvas:
        Color:
            rgba: 1,1,1,.8
        PushMatrix:
        Translate:
            xy: [400, 300]
        Ellipse:
            pos: self.pos
            size: self.size
        PopMatrix:


<Pendulum>:
    canvas:
        Color:
            rgba: 1,1,1,1
        PushMatrix:
        Translate:
            xy: [400, 300]
        Ellipse:
            pos: self.pos
            size: self.size
        Line:
            points: [self.pivot_x, self.pivot_y, self.ball_x, self.ball_y]
            width: 1.5
        PopMatrix:


<Sled>:
    canvas.before:
        Color:
            rgba: 1,1,1,1
        PushMatrix:
        Rotate:
            angle: -self.theta
            origin: self.pos
            axis: 0, 0, 1
        Rectangle:
            pos: self.pos
        Line:
            rectangle: self.x, self.y, 50, 30
            width: 1.5
    canvas.after:
        PopMatrix:
        Line:
            points: [0, 0, 800, 500]
            width: 2
